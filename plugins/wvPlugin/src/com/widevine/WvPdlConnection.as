package com.widevine{	import flash.external.ExternalInterface;		public class WvPdlConnection{				public function initializeDownload(mediaPath:String, pdlPath:String):String{			var _pdlFilePath:String = ExternalInterface.call("WVPDLNew", mediaPath, pdlPath);						return _pdlFilePath;		}						public function startDownload(pdlFilePath:String, trackNumber:int, downloadTrickPlay:Boolean):Boolean{			var r:Boolean = ExternalInterface.call("WVPDLStart", pdlFilePath, trackNumber, downloadTrickPlay);			return r;		}				public function resumeDownload(pdlFilePath:String):Boolean{			var r:Boolean = ExternalInterface.call("WVPDLResume", pdlFilePath);			return r;		}				public function pauseDownload(pdlFilePath:String):Boolean{			var r:Boolean = ExternalInterface.call("WVPDLStop", pdlFilePath);			return r;		}				public function stopDownload(pdlFilePath:String):Boolean{			var r:Boolean = ExternalInterface.call("WVPDLCancel", pdlFilePath);			return r;		}				public function getProgress(pdlFilePath:String):int{			var num:int = ExternalInterface.call("WVPDLGetProgress", pdlFilePath);			return num;		}						public function getTotalSize(pdlFilePath:String):int{			var num:int = ExternalInterface.call("WVPDLGetTotalSize", pdlFilePath);			return num;		}				public function finalizeDownload(pdlFilePath:String):String{			return ExternalInterface.call("WVPDLFinalize", pdlFilePath);		}				public function getErrorText(pdlFilePath:String):String{			return ExternalInterface.call("WVGetLastError", pdlFilePath);		}				public function hasTrickPlay(pdlFilePath:String):Boolean{			var toogle:Boolean = ExternalInterface.call("WVPDLCheckHasTrickPlay", pdlFilePath);			return toogle;		}				public function getTrackBitrate(pdlFilePath:String, trackNumber:int):int{			var num:int = ExternalInterface.call("WVPDLGetTrackBitrate", pdlFilePath, trackNumber);			return num;		}				public function getTrackCount(pdlFilePath:String):int{			var num:int = ExternalInterface.call("WVPDLGetTrackCount", pdlFilePath);			return num;		}				public function getDownloadMap(pdlFilePath:String):String{			return ExternalInterface.call("WVPDLGetDownloadMap", pdlFilePath);		}			}}